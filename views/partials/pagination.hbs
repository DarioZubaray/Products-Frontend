<div class="row justify-content-md-center">
  <div class="col-md-auto">
    <nav>
      <ul class="pagination pg-dark">
        <li class="page-item">
          <a class="page-link {{#if products.first}}disabled{{/if}}" aria-label="Previous">
            <span aria-hidden="true"><i class="fas fa-fast-backward"></i></span>
            <span class="sr-only">First</span>
          </a>
        </li>
        <li class="page-item">
          <a class="page-link {{#if products.first}}disabled{{/if}}" aria-label="Previous">
            <span aria-hidden="true"><i class="fas fa-step-backward"></i></span>
            <span class="sr-only">Previous</span>
          </a>
        </li>
          <li class="page-item">page {{products.number}} of {{products.totalPages}},
            total elements {{products.totalElements}}</li>

        <li class="page-item">
          <a class="page-link {{#if products.last}}disabled{{/if}}" aria-label="Next">
            <span aria-hidden="true"><i class="fas fa-step-forward"></i></span>
            <span class="sr-only">Next</i></span>
          </a>
        </li>
        <li class="page-item">
          <a class="page-link {{#if products.last}}disabled{{/if}}" aria-label="Next">
            <span aria-hidden="true"><i class="fas fa-fast-forward"></i></span>
            <span class="sr-only">Last</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>
